<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/imgVideoThumbnail"
        tools:src="@tools:sample/backgrounds/scenic"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="160dp"
        app:layout_constraintDimensionRatio="h,16:9"
        android:layout_height="0dp"
        />

    <TextView
        app:layout_constraintStart_toEndOf="@id/imgVideoThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgVideoActions"
        android:layout_marginStart="10dp"
        android:id="@+id/txvVideoTitle"
        android:text="Focalors Farewell Execution Cutscene Animation | Archon Quest 5 Masquerade Of The Guilty | Genshin"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txvVideoInfo"
        android:text="Focalors Farewell Execution Cutscene Animation | Archon Quest 5 Masquerade Of The Guilty | Genshin"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/txvVideoTitle"
        app:layout_constraintStart_toStartOf="@id/txvVideoTitle"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/imgVideoActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/imgVideoActions"
        android:src="@drawable/ic_more_vert_blacked_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="18dp"
        android:layout_height="18dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>